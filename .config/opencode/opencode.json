{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "permission": {
        "doom_loop": "ask",
        "external_directory": "ask"
      }
    },
    "plan": {
      "permission": {
        "doom_loop": "ask",
        "external_directory": "ask"
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest", "--extension", "--executable-path", "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser"],
      "enabled": true,
    },
  }
}
